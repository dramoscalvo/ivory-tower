{
  "name": "ivory-tower",
  "private": true,
  "version": "0.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "docker:build": "docker build -t ivory-tower .",
    "docker:run": "docker run --rm -p 8080:80 ivory-tower",
    "ext:copy": "rm -rf vscode-extension/dist && cp -r dist vscode-extension/",
    "ext:build": "pnpm build && pnpm ext:copy && cd vscode-extension && npm run compile",
    "ext:package": "pnpm ext:build && cd vscode-extension && npx vsce package"
  },
  "engines": {
    "node": "^24.13.0"
  },
  "dependencies": {
    "@codemirror/lang-json": "6.0.2",
    "@codemirror/language": "6.12.1",
    "@codemirror/state": "6.5.4",
    "@codemirror/view": "6.39.13",
    "@lezer/highlight": "1.2.3",
    "@replit/codemirror-vim": "6.3.0",
    "codemirror": "6.0.2",
    "react": "19.2.4",
    "react-dom": "19.2.4"
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@playwright/test": "^1.58.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "24.10.9",
    "@types/react": "19.2.10",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "5.1.2",
    "@vitest/coverage-v8": "^4.0.18",
    "babel-plugin-react-compiler": "1.0.0",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-react-hooks": "7.0.1",
    "eslint-plugin-react-refresh": "0.4.26",
    "globals": "17.2.0",
    "jsdom": "^27.4.0",
    "prettier": "3.8.1",
    "typescript": "5.9.3",
    "typescript-eslint": "8.54.0",
    "vite": "7.3.1",
    "vitest": "^4.0.18"
  }
}
